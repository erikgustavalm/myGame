#include "event.h"

void checkEvent()
{
	SDL_Event event;
	while (SDL_PollEvent(event)) {
		switch (event) {
			case SDL_QUIT:
				running = 0;
				break;
				
			case SDL_KEYDOWN:
				switch (event.key.keysym.sym) {
					case SDLK_ESCAPE:
						running = 0;
						break;
					default:
						break;
				}
				break;
				
			default:
				break;
		}
	}
}
  
